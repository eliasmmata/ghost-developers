<div class="card gedf-card my-2">
    <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                    <div class="mx-2">
                        <img class="rounded-circle" data-src="holder.js/40x40?text=RA&bg=0d6efd&fg=fff&size=12" alt="">
                    </div>
                    <div class="mx-2">
                        <div class="h5 m-0">{{app.user.alias}}</div>
                        <div class="h7 text-muted text-center">Your post {{secret.id}}</div>
                    </div>
                    <div>
                        <div class="dropdown">
                        <button class="btn btn-link dropdown-toggle" type="button" id="gedf-drop1"  
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-ellipsis-h"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledly="gedf-drop1">
                                <div class="h6 dropdown-header">Opciones</div>
                                <a class="dropdown-item" href="{{ path('detail_secret', {'id':secret.id}) }}">Ver</a>
                                <a class="dropdown-item" href="{{ path('edit_secret', {'id':secret.id}) }}">Editar</a>
                                <a class="dropdown-item" href="{{ path('delete_secret', {'id':secret.id}) }}">Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="text-muted h7 mb-2"><i class="far fa-clock"></i> {{secret.time | date('Y/m/d')}}</div>
                <p class="card-text">
                    {{secret.text}}
                </p>
            </div>
            <div class="card-footer">
                <a href="#" class="card-link"><i class="fas fa-heart"></i></i> Like </a>
                <a href="#" class="card-link"><i class="fa fa-comment"></i> Comment </a>
                <a href="#" class="card-link"><i class="fas fa-share"></i> Share </a>
            </div>
        </div>
    </div>
</div>