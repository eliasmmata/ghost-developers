{% extends 'base.html.twig' %}

{% block body %}
 <div id="containerSecret" class="container gedf-wrapper my-4">
  <div class="row">
    <div class="col-md-12 gedf-main">
      {{ include('secret/secretDetail/form.html.twig', {'form': form}) }}
    </div>
  </div>
</div>
<div id="secret-post" class="container gedf-wrapper my-4">
  {% for message in app.flashes('info') %}
  <div class="alert alert-success">
  <i class="fas fa-info-circle"></i>
  {{ message }}
  </div>
  {% endfor %}
  {% for secret in secrets %}
    <div class="row">
      <div class="col-md-12 gedf-main">
      {{ include('secret/secretDetail/secret-raw.html.twig', {'secret': secret}) }}
    {% endfor %}
      </div>
    </div>
</div>

{% endblock %}